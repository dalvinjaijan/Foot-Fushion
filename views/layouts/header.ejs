  <script>
	window.onload=function(){
		console.log(window.location.pathname)
		
		if(window.location.pathname == "/"){
			
			document.getElementById('shops').classList.remove('active')
			document.getElementById('cart').classList.remove('active')
			document.getElementById('wishlist').classList.remove('active')
			
			document.getElementById('home').classList.add('active')

		}else if(window.location.pathname == "/shop"){
			document.getElementById('home').classList.remove('active')
			document.getElementById('cart').classList.remove('active')
			document.getElementById('wishlist').classList.remove('active')
			

			document.getElementById('shops').classList.add('active')
		}
		else if(window.location.pathname == "/cart"){
			document.getElementById('home').classList.remove('active')
			document.getElementById('wishlist').classList.remove('active')
			document.getElementById('shops').classList.remove('active')
			document.getElementById('cart').classList.add('active')

		}else if(window.location.pathname == "/wishlist"){
			document.getElementById('home').classList.remove('active')
			document.getElementById('cart').classList.remove('active')
			document.getElementById('shops').classList.remove('active')
			document.getElementById('wishlist').classList.add('active')

		}
	}

	

  </script>
  